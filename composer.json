{
    "name": "angkor/laravel-support",
    "description": "Ankgor common support helpers, contracts, and traits required by various Ankgor packages. Validator functionality, and basic controller included out-of-the-box.",
    "type": "library",
    "keywords": [
        "rinvex",
        "laravel",
        "contract",
        "validator",
        "timezones",
        "mimetype",
        "support",
        "helper",
        "trait"
    ],
    "license": "MIT",
    "homepage": "https://open.angkor.dev",
    "support": {
        "email": "khmer@angkor.dev",
        "issues": "https://github.com/angkordotdev/laravel-support/issues",
        "source": "https://github.com/angkordotdev/laravel-support",
        "docs": "https://github.com/angkordotdev/laravel-support/blob/main/README.md"
    },
    "authors": [
        {
            "name": "Angkor Dev",
            "homepage": "https://angkor.dev",
            "email": "khmer@angkordotdev.com"
        },
        {
            "name": "Abdelrahman Omran",
            "homepage": "https://omranic.com",
            "email": "me@omranic.com",
            "role": "Project Lead"
        },
        {
            "name": "Sophy SEM",
            "homepage": "https://angkor.dev",
            "email": "khmer@angkor.dev"
        },
        {
            "name": "The Generous Laravel Community",
            "homepage": "https://github.com/angkordotdev/laravel-support/contributors"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "illuminate/database": "^10.0.0 || ^11.0.0 || ^12.0.0",
        "illuminate/support": "^10.0.0 || ^11.0.0 || ^12.0.0",
        "spatie/laravel-sluggable": "^3.4.0",
        "spatie/laravel-schemaless-attributes": "^2.4.0",
        "spatie/laravel-translatable": "^6.0.0",
        "vinkla/hashids": "^11.0.0 || ^12.0.0 || ^13.0.0",
        "watson/validating": "^8.0.0"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.32.0",
        "phpunit/phpunit": "^10.1.0"
    },
    "autoload": {
        "files": [
            "src/Support/helpers.php"
        ],
        "psr-4": {
            "Angkor\\Support\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Angkor\\Support\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Angkor\\Support\\Providers\\SupportServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
